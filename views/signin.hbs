<div class="row justify-content-center">
  <div class="col-7">

    <form class="form-signin" action="/signin" method="POST">
      <div class="form-group row justify-content-center">
        <img src="https://i.imgur.com/8DjhHxL.png">
      </div>

      <div class="form-group row justify-content-center mb-4">
        <div class="sign-title">登入Alphitter</div>
      </div>

      <div class="form-group row justify-content-center mb-3">
        <div class="col-8">
          <input type="text" name="account" id="account" class="form-control" placeholder="帳號">
          <div class="invalid-feedback"></div>
        </div>
      </div>

      <div class="form-group row justify-content-center mb-3">
        <div class="col-8">
          <input type="password" name="password" id="password" class="form-control" placeholder="密碼">
          <div class="invalid-feedback"></div>
        </div>
      </div>

      <div class="form-group row justify-content-center mt-5 mb-3">
        <div class="col-8">
          <button class="btn signin-button" type="submit">登入</button>
        </div>
      </div>
      
      <div class="row justify-content-center">
        <div class="col-8 text-right text-signup">
          <a href="/signup">註冊Alphitter</a>•
          <a href="/admin/signin">後台登入</a>
        </div>
      </div>
        
    </form>

  </div>
</div>

<script src="/javascripts/signIn.js"></script>